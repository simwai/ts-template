{
  "name": "ts-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "private": true,
  "scripts": {
    "always-debug": "tsx watch --ignore ./tests --inspect --trace-warnings ./src/index.ts",
    "debug": "tsx --inspect --trace-warnings ./src/index.ts",
    "format": "xo --fix --prettier",
    "lint": "xo --fix",
    "start": "tsx src/index.ts",
    "stop-debug": "taskkill /F /IM node.exe",
    "test": "npx ava",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "simwai",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^5.0.0",
    "ava": "^6.1.3",
    "husky": "^9.0.11",
    "nodemon": "^3.1.0",
    "taskkill": "^5.0.0",
    "tsx": "^4.9.3",
    "typescript": "^5.4.5",
    "xo": "^0.58.0"
  },
  "engines": {
    "node": ">=20"
  },
  "xo": {
    "envs": [
      "es2022",
      "browser"
    ],
    "prettier": true,
    "ignore": "./dist, ./node_modules",
    "extensions": [
      ".ts"
    ],
    "files": [
      "./src/**/*.ts"
    ],
    "rules": {
      "@typescript-eslint/ban-types": "off",
      "@typescript-eslint/consistent-type-imports": "off",
      "@typescript-eslint/no-unsafe-argument": "off",
      "@typescript-eslint/prefer-promise-reject-errors": "off",
      "@typescript-eslint/naming-convention": [
        "error",
        {
          "selector": [
            "memberLike",
            "method"
          ],
          "modifiers": [
            "private"
          ],
          "format": [
            "camelCase"
          ],
          "leadingUnderscore": "require"
        },
        {
          "selector": "variable",
          "types": [
            "boolean"
          ],
          "format": [
            "camelCase"
          ],
          "prefix": [
            "is",
            "should",
            "has",
            "can",
            "did",
            "will"
          ]
        }
      ],
      "import/extensions": "off",
      "max-params": "off",
      "new-cap": "off",
      "no-await-in-loop": "off",
      "unicorn/numeric-separators-style": "off",
      "unicorn/prefer-array-some": "off",
      "unicorn/prefer-module": "off"
    }
  }
}